<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Farm"
    android:background="@color/background"
    android:id="@+id/applicationLayout">


    <LinearLayout
        android:id="@+id/animal_placeholder"
        android:layout_width="153dp"
        android:layout_height="132dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/animal_photo_one"
        android:layout_width="153dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animal_placeholder"></LinearLayout>

    <LinearLayout
        android:id="@+id/animal_photo_twoo"
        android:layout_width="153dp"
        android:layout_height="132dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/animal_photo_one"></LinearLayout>

    <LinearLayout
        android:id="@+id/animal_photo_three"
        android:layout_width="153dp"
        android:layout_height="132dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animal_photo_one"></LinearLayout>


</android.support.constraint.ConstraintLayout>