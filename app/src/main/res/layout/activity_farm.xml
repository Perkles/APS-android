<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Farm"
    android:background="@color/background">


    <LinearLayout
        android:id="@+id/animal_placeholder"
        android:layout_width="153dp"
        android:layout_height="132dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView_sheep_placeholder"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sheep_placeholder" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_sheep"
        android:layout_width="139dp"
        android:layout_height="132dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animal_placeholder"
        app:layout_constraintVertical_bias="0.394"
        app:srcCompat="@drawable/sheep" />

</android.support.constraint.ConstraintLayout>